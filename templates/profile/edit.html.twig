{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 py-12">
        <div class="max-w-3xl mx-auto">
            <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                {# Header #}
                <div class="px-6 py-8 bg-indigo-600">
                    <h1 class="text-2xl font-bold text-white">
                        Modifier mon profil
                    </h1>
                    <p class="mt-2 text-indigo-200">
                        Personnalisez vos informations personnelles
                    </p>
                </div>

                {# Form #}
                <div class="p-6">
                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    {# Nom et Pr√©nom #}
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            {{ form_label(form.firstname, null, {
                                'label_attr': {
                                    'class': 'block text-sm font-medium text-gray-700 mb-2'
                                }
                            }) }}
                            {{ form_widget(form.firstname, {
                                'attr': {
                                    'class': 'block w-full px-4 py-3 rounded-lg border border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-base'
                                }
                            }) }}
                            {{ form_errors(form.firstname, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                        </div>

                        <div>
                            {{ form_label(form.lastname, null, {
                                'label_attr': {
                                    'class': 'block text-sm font-medium text-gray-700 mb-2'
                                }
                            }) }}
                            {{ form_widget(form.lastname, {
                                'attr': {
                                    'class': 'block w-full px-4 py-3 rounded-lg border border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-base'
                                }
                            }) }}
                            {{ form_errors(form.lastname, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                        </div>
                    </div>

                    {# Email #}
                    <div>
                        {{ form_label(form.email, null, {
                            'label_attr': {
                                'class': 'block text-sm font-medium text-gray-700 mb-2'
                            }
                        }) }}
                        {{ form_widget(form.email, {
                            'attr': {
                                'class': 'block w-full px-4 py-3 rounded-lg border border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-base'
                            }
                        }) }}
                        {{ form_errors(form.email, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                    </div>

                    {# Biographie #}
                    <div>
                        {{ form_label(form.bio, null, {
                            'label_attr': {
                                'class': 'block text-sm font-medium text-gray-700 mb-2'
                            }
                        }) }}
                        {{ form_widget(form.bio, {
                            'attr': {
                                'class': 'block w-full px-4 py-3 rounded-lg border border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-base',
                                'rows': '4'
                            }
                        }) }}
                        {{ form_errors(form.bio, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                    </div>

                    {# Langue #}
                    <div>
                        {{ form_label(form.locale, null, {
                            'label_attr': {
                                'class': 'block text-sm font-medium text-gray-700 mb-2'
                            }
                        }) }}
                        {{ form_widget(form.locale, {
                            'attr': {
                                'class': 'block w-full px-4 py-3 rounded-lg border border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-base'
                            }
                        }) }}
                        {{ form_errors(form.locale, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                    </div>

                    {# Mot de passe #}
                    <div>
                        {{ form_label(form.plainPassword, null, {
                            'label_attr': {
                                'class': 'block text-sm font-medium text-gray-700 mb-2'
                            }
                        }) }}
                        {{ form_widget(form.plainPassword, {
                            'attr': {
                                'class': 'block w-full px-4 py-3 rounded-lg border border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-base'
                            }
                        }) }}
                        <p class="mt-1 text-sm text-gray-500">
                            Laissez vide si vous ne souhaitez pas changer de mot de passe
                        </p>
                        {{ form_errors(form.plainPassword, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                    </div>

                    {# Boutons #}
                    <div class="flex justify-end space-x-4 pt-6 border-t">
                        <a href="{{ path('app_profile') }}"
                           class="px-6 py-3 border border-gray-300 rounded-lg text-base font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                            Annuler
                        </a>
                        <button type="submit"
                                class="px-6 py-3 border border-transparent rounded-lg text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                            Enregistrer les modifications
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
