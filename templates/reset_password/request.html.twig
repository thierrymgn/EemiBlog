{% extends 'base.html.twig' %}
{% set show_header = false %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded" role="alert">
                    {{ flash_error }}
                </div>
            {% endfor %}

            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    Réinitialisation du mot de passe
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600">
                    Entrez votre email pour recevoir un lien de réinitialisation
                </p>
            </div>

            {{ form_start(requestForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
            <div class="rounded-md shadow-sm -space-y-px">
                {{ form_row(requestForm.email, {
                    'attr': {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm'},
                    'label_attr': {'class': 'sr-only'}
                }) }}
            </div>

            <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Envoyer le lien
            </button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
