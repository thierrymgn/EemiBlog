{% extends 'base.html.twig' %}
{% set show_header = false %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded" role="alert">
                    {{ flash_error }}
                </div>
            {% endfor %}

            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    Créer un compte
                </h2>
            </div>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
            <div class="rounded-md space-y-4">
                {{ form_row(registrationForm.firstName, {
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700'},
                    'attr': {'class': 'appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'},
                    'label': 'Prénom'
                }) }}

                {{ form_row(registrationForm.lastName, {
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700'},
                    'attr': {'class': 'appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'},
                    'label': 'Nom'
                }) }}

                {{ form_row(registrationForm.email, {
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700'},
                    'attr': {'class': 'appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'},
                    'label': 'Email'
                }) }}

                {{ form_row(registrationForm.plainPassword, {
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700'},
                    'attr': {'class': 'appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'},
                    'label': 'Mot de passe'
                }) }}

                <div class="flex items-center">
                    {{ form_row(registrationForm.agreeTerms, {
                        'label_attr': {'class': 'block text-sm text-gray-900'},
                        'attr': {'class': 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded'},
                        'label': 'J\'accepte les conditions d\'utilisation',
                        'row_attr': {'class': 'flex items-center gap-2'}
                    }) }}
                </div>
            </div>

            <div>
                <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    S'inscrire
                </button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
