{% extends 'base.html.twig' %}

{% block title %}Media{% endblock %}

{% block body %}
    <h1>Media</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medium.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ medium.name }}</td>
            </tr>
            <tr>
                <th>File_name</th>
                <td>{{ medium.fileName }}</td>
            </tr>
            <tr>
                <th>Mime_type</th>
                <td>{{ medium.mimeType }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ medium.size }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ medium.path }}</td>
            </tr>
            <tr>
                <th>Alt_text</th>
                <td>{{ medium.altText }}</td>
            </tr>
            <tr>
                <th>Caption</th>
                <td>{{ medium.caption }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ medium.createdAt ? medium.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ medium.updatedAt ? medium.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_media_index') }}">back to list</a>

    {{ include('media/_delete_form.html.twig') }}
{% endblock %}
