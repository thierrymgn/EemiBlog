{% extends 'base.html.twig' %}

{% block title %}Language{% endblock %}

{% block body %}
    <h1>Language</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ language.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ language.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ language.name }}</td>
            </tr>
            <tr>
                <th>Locale</th>
                <td>{{ language.locale }}</td>
            </tr>
            <tr>
                <th>Is_default</th>
                <td>{{ language.isDefault ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Is_active</th>
                <td>{{ language.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Flag</th>
                <td>{{ language.flag }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ language.position }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ language.createdAt ? language.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ language.updatedAt ? language.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_language_index') }}">back to list</a>

    <a href="{{ path('app_language_edit', {'id': language.id}) }}">edit</a>

    {{ include('language/_delete_form.html.twig') }}
{% endblock %}
