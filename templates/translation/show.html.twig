{% extends 'base.html.twig' %}

{% block title %}Translation{% endblock %}

{% block body %}
    <h1>Translation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ translation.id }}</td>
            </tr>
            <tr>
                <th>Entity_type</th>
                <td>{{ translation.entityType }}</td>
            </tr>
            <tr>
                <th>Entity_id</th>
                <td>{{ translation.entityId }}</td>
            </tr>
            <tr>
                <th>Field</th>
                <td>{{ translation.field }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ translation.content }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ translation.createdAt ? translation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ translation.updatedAt ? translation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_translation_index') }}">back to list</a>

    <a href="{{ path('app_translation_edit', {'id': translation.id}) }}">edit</a>

    {{ include('translation/_delete_form.html.twig') }}
{% endblock %}
