{% extends 'base.html.twig' %}
{% set show_header = false %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    Réinitialisation du mot de passe
                </h2>
            </div>

            {{ form_start(resetForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
            <div class="space-y-6">
                {{ form_row(resetForm.plainPassword.first, {
                    'attr': {'class': 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm'},
                    'label': 'Nouveau mot de passe',
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'},
                    'error_attr': {'class': 'text-sm text-red-600 mt-1'},
                    error_item_class: 'text-sm text-red-600 mt-1'
                }) }}
                {{ form_row(resetForm.plainPassword.second, {
                    'attr': {'class': 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm'},
                    'label': 'Confirmer le mot de passe',
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'},
                    'error_attr': {'class': 'text-sm text-red-600 mt-1'},
                    'help': 'The password fields must match.',
                    'help_attr': {'class': 'text-sm text-gray-500 mt-1'},
                }) }}
            </div>

            <button type="submit" class="mt-6 w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Réinitialiser le mot de passe
            </button>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
